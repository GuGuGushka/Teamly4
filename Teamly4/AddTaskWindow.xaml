<Window x:Class="Teamly4.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Teamly4"
        mc:Ignorable="d"
        Title="AddTaskWindow" Height="450" Width="400" Closed="Window_Closed">
    <Grid>
        <Label 
            Content="Название" 
            HorizontalAlignment="Left" 
            Margin="89,44,0,0" 
            VerticalAlignment="Top"
            />
        <Label 
            Content="Описание" 
            HorizontalAlignment="Left" 
            Margin="87,75,0,0" 
            VerticalAlignment="Top"
            />
        <Label 
            Content="Статус задачи" 
            HorizontalAlignment="Left" 
            Margin="66,106,0,0" 
            VerticalAlignment="Top"
            />
        <Label 
            Content="Приоритет выполнения" 
            HorizontalAlignment="Left" 
            Margin="10,137,0,0" 
            VerticalAlignment="Top"
            />
        <Label 
            Content="Исполнитель" 
            HorizontalAlignment="Left" 
            Margin="69,168,0,0" 
            VerticalAlignment="Top"
            />
        <TextBox 
            x:Name="TextBoxName" 
            HorizontalAlignment="Left" 
            Margin="172,48,0,0" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" 
            Width="120"
            />
        <TextBox 
            x:Name="TextBoxDescription" 
            HorizontalAlignment="Left" 
            Margin="172,79,0,0" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" 
            Width="120"
            />
        <ComboBox 
            x:Name="ComboBoxStatuses" 
            HorizontalAlignment="Left" 
            Margin="172,110,0,0" 
            VerticalAlignment="Top" 
            Width="120"
            DisplayMemberPath="Name"
            />
        <ComboBox 
            x:Name="ComboBoxPriorities" 
            HorizontalAlignment="Left" 
            Margin="172,139,0,0" 
            VerticalAlignment="Top" 
            Width="120"
            DisplayMemberPath="Name"
            />
        <ComboBox 
            x:Name="ComboBoxPerformers" 
            HorizontalAlignment="Left" 
            Margin="172,172,0,0" 
            VerticalAlignment="Top" 
            Width="120"
            DisplayMemberPath="UserName"
            />
        <Button 
            x:Name="ButtonSave" 
            Content="Сохранить" 
            HorizontalAlignment="Left" 
            Margin="120,329,0,0" 
            VerticalAlignment="Top" 
            Width="133" 
            Click="ButtonSave_Click"
            />


    </Grid>
</Window>
