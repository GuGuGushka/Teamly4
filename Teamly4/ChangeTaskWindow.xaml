<Window x:Class="Teamly4.ChangeTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Teamly4"
        mc:Ignorable="d"
        Title="ChangeTaskWindow" Height="450" Width="400" Closed="Window_Closed">
    <Grid>
        <Label 
            Content="Имя:" 
            HorizontalAlignment="Left" 
            Margin="89,94,0,0" 
            VerticalAlignment="Top"
            />
        <Label 
            Content="Описание:" 
            HorizontalAlignment="Left" 
            Margin="89,125,0,0" 
            VerticalAlignment="Top"
            />
        <Label 
            Content="Исполнитель:" 
            HorizontalAlignment="Left" 
            Margin="89,266,0,0" 
            VerticalAlignment="Top"
            />
        <TextBox 
            x:Name="TextBoxName" 
            HorizontalAlignment="Left" 
            Margin="192,102,0,0" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" 
            Width="141"
            />
        <TextBox 
            x:Name="TextBoxDescription" 
            HorizontalAlignment="Left" 
            Margin="192,129,0,0" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" 
            Width="141" 
            Height="120"
            />
        <ComboBox 
            x:Name="ComboBoxPerformers"
            HorizontalAlignment="Left" 
            Margin="192,270,0,0" 
            VerticalAlignment="Top" 
            Width="141"
            DisplayMemberPath="UserName"
            />
        <Button 
            x:Name="ButtonSave" 
            Content="Сохранить" 
            HorizontalAlignment="Left" 
            Margin="145,318,0,0" 
            VerticalAlignment="Top" 
            Width="95" Click="ButtonSave_Click"
            />


    </Grid>
</Window>
