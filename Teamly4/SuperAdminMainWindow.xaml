<Window x:Class="Teamly4.SuperAdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Teamly4"
        mc:Ignorable="d"
        Title="SuperAdminMainWindow" Height="450" Width="800" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition 
                Height="75*"
                />
            <RowDefinition 
                Height="25*"
                />
        </Grid.RowDefinitions>

        <DataGrid 
            Name="DataGridEmploees" 
            ColumnWidth="*" 
            AutoGenerateColumns="False" 
            IsReadOnly="True" 
            SelectedCellsChanged="DataGridEmploees_SelectedCellsChanged"
            >
            <DataGrid.Columns>
                <DataGridTextColumn 
                    Header="ИД" 
                    Binding="{Binding Id}"
                    />
                <DataGridTextColumn 
                    Header="usename" 
                    Binding="{Binding UserName}"
                    />
                <DataGridTextColumn 
                    Header="Имя" 
                    Binding="{Binding FirstName}"
                    />
                <DataGridTextColumn 
                    Header="Фамилия" 
                    Binding="{Binding SecondName}"
                    />
                <DataGridTextColumn 
                    Header="Пароль" 
                    Binding="{Binding Password}"
                    />
                <DataGridTextColumn 
                    Header="Роль" 
                    Binding="{Binding Roles.Name}"
                    />

            </DataGrid.Columns>
        </DataGrid>

        <Label 
            Content="Id" 
            HorizontalAlignment="Left" 
            Margin="45,18,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top"
            />
        <Label 
            Content="username" 
            HorizontalAlignment="Left" 
            Margin="139,17,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top"
            />
        <Label 
            Content="Имя" 
            HorizontalAlignment="Left" 
            Margin="255,18,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top"
            />
        <Label 
            Content="Фамилия" 
            HorizontalAlignment="Left" 
            Margin="353,18,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top"
            />
        <Label 
            Content="Пароль" 
            HorizontalAlignment="Left" 
            Margin="469,17,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top"
            />
        <Label 
            Content="Роль" 
            HorizontalAlignment="Left" 
            Margin="596,17,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top"
            />


        <TextBox 
            x:Name="TextBoxId" 
            HorizontalAlignment="Left" 
            Margin="22,48,0,0" 
            Grid.Row="1" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" 
            Width="89" 
            Height="23"
            />
        <TextBox 
            x:Name="TextBoxUsername" 
            HorizontalAlignment="Left" 
            Margin="132,48,0,0" 
            Grid.Row="1" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" 
            Width="89" 
            Height="23"
            />
        <TextBox 
            x:Name="TextBoxFirstName" 
            HorizontalAlignment="Left" 
            Margin="240,48,0,0" 
            Grid.Row="1" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" 
            Width="89" 
            Height="23"
            />
        <TextBox 
            x:Name="TextBoxSecondName" 
            HorizontalAlignment="Left" 
            Margin="346,48,0,0" 
            Grid.Row="1" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" 
            Width="89" 
            Height="23"
            />
        <TextBox 
            x:Name="TextBoxPassword" 
            HorizontalAlignment="Left" 
            Margin="456,48,0,0" 
            Grid.Row="1" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" 
            Width="101" 
            Height="23"
            />

        <ComboBox 
            x:Name="ComboBoxRoles" 
            HorizontalAlignment="Left" 
            Margin="574,49,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            Width="120" 
            DisplayMemberPath="Name"
            />

        <Button 
            x:Name="ButtonAdd" 
            Content="Add" 
            HorizontalAlignment="Left" 
            Margin="730,10,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            Click="ButtonAdd_Click" 
            />
        <Button 
            x:Name="ButtonChange" 
            Content="Change" 
            HorizontalAlignment="Left" 
            Margin="730,45,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            Click="ButtonChange_Click"
            />
        <Button 
            x:Name="ButtonDel" 
            Content="Del" 
            HorizontalAlignment="Left" 
            Margin="730,78,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            Click="ButtonDel_Click"
            />
        <Button 
            x:Name="ButtonClear" 
            Content="Clear" 
            HorizontalAlignment="Left" 
            Margin="619,78,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            Click="ButtonClear_Click"
            />

    </Grid>
</Window> 
